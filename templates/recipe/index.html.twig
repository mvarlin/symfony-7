{% extends 'base.html.twig' %}

{% block title %}Recette{% endblock %}

{% block body %}

<div class="row">
    <div class="col-8">Liste des recettes</div>
    <div class="col-4 d-grid gap-2 d-md-flex justify-content-md-end">
      <a class="btn btn-link m-0 text-reset" href="{{ url('recipe.create') }}" role="button" data-ripple-color="primary" data-mdb-ripple-init >Ajouter une recette</a>
      {# <button class="btn btn-info me-md-2" href="{{ url('recipe.create') }}" type="button">Ajouter une recette</button> #}
    </div>
</div>

<div class="row">    

    <table class="table table-striped table-bordered table-hover">
      <thead class="thead-dark">
        <tr>
          <th scope="col">Id</th>
          <th scope="col">Titre</th>
          <th scope="col">Slug</th>
          <th scope="col">Dur√©e</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
      {% for recipe in recipes %}        
        <tr>
          <td>{{ recipe.id }}  </td>
          <td>{{ recipe.title }}  </td>
          <td>{{ recipe.slug }}  </td>
          <td>{{ recipe.duration }} min </td>
          <td>
            <div class="d-flex gap-1">
              <a class="btn btn-primary btn-sm" href="{{ path('recipe.info', {slug: recipe.slug, id: recipe.id}) }}" >Info</a>
              <a class="btn btn-warning btn-sm" href="{{ path('recipe.edit', {id: recipe.id}) }}" >Modifier</a>
              <form action="{{ path('recipe.delete', {id: recipe.id}) }}" method="post">
                <input type="hidden" name="_method" value="DELETE">
                <button type="submit" class="btn btn-danger btn-sm">Supprimer</button>
              </form>
            </div>
            {# <a class="btn btn-primar btn-sm" href="{{ path('recipe.delete', {id: recipe.id}) }}" >Supprimer</a> #}
            {# <a class="btn btn-link m-0 text-reset fab fa-btc" href="{{ url('recipe.info', {slug: recipe.slug, id: recipe.id}) }}" role="button" data-ripple-color="primary" data-mdb-ripple-init >Info</a>
            <a class="btn btn-link m-0 text-reset" href="{{ url('recipe.edit', {id: recipe.id}) }}" role="button" data-ripple-color="primary" data-mdb-ripple-init >Modifier</a>
            <a class="btn btn-link m-0 text-reset" href="{{ url('recipe.delete', {id: recipe.id}) }}" role="button" data-ripple-color="primary" data-mdb-ripple-init >Supprimer</a> #}
          </td>
        </tr>
      {% endfor %}
      </tbody>
    </table>
</div>



